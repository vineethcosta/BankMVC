@{
    ViewBag.Title = "ChangePassword";
}

@section customerMenu
        {
    <button type="button" id="fundTransferBtn" onclick="location.href='@Url.Action("FundTransfer")'" class="btn btn-info ">Fund Transer</button><br />
    <button type="button" id="miniStatementBtn" onclick="location.href='@Url.Action("MiniStatement")'" class="btn btn-info ">MiniStatement</button><br />
    <button type="button" id="changePasswordBtn" onclick="location.href='@Url.Action("ChangePassword")'" class="btn btn-info ">ChangePassword </button><br />
    <button type="button" id="balanceEnquiryBtn" onclick="location.href='@Url.Action("BalanceEnquiry")'" class="btn btn-info ">BalanceEnquiry</button><br />
    <button type="button" id="customStatementBtn" onclick="location.href='@Url.Action("CustomStatement")'" class="btn btn-info ">CustomStatement</button><br />

}

<h2>ChangePassword</h2>
<div>
    @ViewBag.message
</div>

@using (Html.BeginForm())
{
    <div class="jumbotron text-center" style="display: inline-block; margin-top:100px">
    <div class="input-group mb-3">
        <Label ID="Label1"  Class=" input-group-text input-group-prepend">Old Password</Label>
        @Html.Editor("oldPassword")
    </div>
    <div class="input-group mb-3">
        <label id="Label1" class=" input-group-text input-group-prepend">New Password</label>
        @Html.Editor("newPassword1")
    </div>
    <div class="input-group mb-3">
        <label id="Label1" class=" input-group-text input-group-prepend">Confirm Password</label>
        @Html.Editor("newPassword2")
    </div>
        <div><Button ID="submit"   Class="btn btn-outline-success" >Submit</Button></div>

</div>
}
